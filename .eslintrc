{
  "extends": ["prettier", "standard"],

  "env": {
    "es6": true,
    "node": true
  },

  "plugins": [
    "prettier",
    "standard",
    "node",
    "promise",
    "mocha"
  ],

  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },

  "globals": {
  },

  "rules": {
    "space-before-function-paren": ["error", "never"],
    "mocha/no-exclusive-tests": "error"
  }
}
